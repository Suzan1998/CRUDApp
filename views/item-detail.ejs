<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs');%>
  <body>
    <%- include('./partials/nav.ejs');%>
    <div class="container">
      <h4>Item Detail</h4>
      <div>
        <h5><%=item.name%></h5>
        <h5><%=item.price%></h5>
      </div>
      <a id="deleteBtn" class="delete btn" href="" data-id="<%=item._id%>"
        >delete</a
      >
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
      deleteBtn.onclick = function (e) {
        e.preventDefault();
        // to get id
        const id = deleteBtn.dataset.id; // method1
        //const id = e.target.getAttribute("data-id"); method2
        console.log(id);
        const endpoint = `/items/${id}`;
        fetch(endpoint, {
          method: "DELETE",
        })
          .then((res) => res.json())
          .then((data) => {
            console.log("data", data);
            window.location.href = data.redirect;
          })
          .catch((err) => console.log(err));
      };
    </script>
  </body>
</html>
